<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="onBackClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onTitleClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onConfirmClick"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/davinci_white">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="@{onBackClick}"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/davinci_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:onClick="@{onTitleClick}"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="160dp"
                android:maxLines="1"
                android:text="@{title}"
                android:textColor="@color/davinci_title"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/davinci_arrow_down" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:enabled="false"
            android:gravity="center"
            android:onClick="@{onConfirmClick}"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/davinci_confirm"
            android:textColor="@color/davinci_unenable"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/davinci_line" />
    </RelativeLayout>
</layout>
