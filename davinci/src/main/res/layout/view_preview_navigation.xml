<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/davinci_preview_nav"
    android:orientation="vertical">

    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/davinci_back_white" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/davinci_shape_preivew_confirm"
            android:gravity="center"
            android:text="@string/davinci_confirm"
            android:textColor="@color/davinci_white"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>