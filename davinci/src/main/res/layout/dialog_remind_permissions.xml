<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/davinci_shape_permission_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/davinci_permissions_title"
        android:textColor="#222226"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.02"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/davinci_permissions_describe"
        android:textColor="#222226"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/davinci_shape_permission_cancel_bg"
            android:gravity="center"
            android:text="不允许"
            android:textColor="#9999AA"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="29dp"
            android:layout_weight="1"
            android:background="@drawable/davinci_shape_permission_open_bg"
            android:gravity="center"
            android:text="允许并设置"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>