<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="net.csdn.davinci.Config" />

        <variable
            name="viewmodel"
            type="net.csdn.davinci.ui.viewmodel.PhotoViewModel" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.RecyclerView.Adapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <net.csdn.davinci.ui.view.PhotoNavigation
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?davinciBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    android:visibility="@{viewmodel.typeVisibility}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="@{() -> viewmodel.onSelectType(viewmodel.typeImage)}"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/davinci_photo"
                        android:textColor="?davinciSelectTypeTextColor"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:bind_isSelected="@{viewmodel.mSelectType == viewmodel.typeImage}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="@{() -> viewmodel.onSelectType(viewmodel.typeVideo)}"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/davinci_video"
                        android:textColor="?davinciSelectTypeTextColor"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:bind_isSelected="@{viewmodel.mSelectType == viewmodel.typeVideo}" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bind_adapter="@{adapter}"
                        app:bind_column="@{Config.column}" />

                    <net.csdn.davinci.ui.view.EmptyView
                        android:id="@+id/empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?davinciBackgroundColor"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="14sp"
                            android:text="@{}"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <net.csdn.davinci.ui.view.PhotoAlbum
                android:id="@+id/album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</layout>
