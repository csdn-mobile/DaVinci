<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DaVinciDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.Day" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="davinciBackgroundColor">@color/davinci_background</item>
        <item name="davinciTextColor">@color/davinci_background_night</item>
        <item name="davinciCamera">@drawable/davinci_camera</item>
        <item name="davinciCameraBg">@color/davinci_camera_bg</item>
        <item name="davinciCameraText">@color/davinci_camera_text</item>
        <item name="davinciSelectTypeTextColor">@color/color_select_type_selector</item>
    </style>

    <style name="AppTheme.Night" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="davinciBackgroundColor">@color/davinci_background_night</item>
        <item name="davinciTextColor">@color/davinci_text_night</item>
        <item name="davinciCamera">@drawable/davinci_camera_night</item>
        <item name="davinciCameraBg">@color/davinci_camera_bg_night</item>
        <item name="davinciCameraText">@color/davinci_camera_text_night</item>
        <item name="davinciSelectTypeTextColor">@color/color_select_type_night_selector</item>
    </style>


</resources>